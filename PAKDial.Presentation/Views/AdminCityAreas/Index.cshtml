@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.AntiForgeryToken()
<div class="content-wrapper">
    <div class="content-wrapper-before"></div>
    <div class="content-header row">
        <div class="content-header-left col-md-4 col-12 mb-2">
            <h3 class="content-header-title">Location Management</h3>
        </div>
        <div class="content-header-right col-md-8 col-12">
            <div class="breadcrumbs-top float-md-right">
                <div class="breadcrumb-wrapper mr-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">Location Management</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <b>City Areas</b>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="body-content">
        <!-- server-side table -->
        @await Html.PartialAsync("~/Views/AdminCityAreas/_CityAreaList.cshtml")
        <!--/ server-side table -->
    </div>

</div>

@await Html.PartialAsync("~/Views/AdminCityAreas/_AddCityArea.cshtml")
@await Html.PartialAsync("~/Views/AdminCityAreas/_EditCityArea.cshtml")
@await Html.PartialAsync("~/Views/AdminCityAreas/_DeleteCityArea.cshtml")


@section scripts {
    <script src="~/app-assets/vendors/js/forms/validation/jquery.validate.min.js"></script>
    <script src="~/assets/js/CommonFunctions.js"></script>
    <script src="~/assets/js/AdminCityAreaComponent/AdminCityAreaModel.js"></script>
    <script src="~/assets/js/AdminCityAreaComponent/AdminCityAreaViewModel.js"></script>
}
