
@{
    ViewData["Title"] = "EditClientCompanyListing";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
@section Style {
    <style>
        .inner-card {
            background-color: #f4f5fa;
        }

        .child-card {
            margin-left: 30px;
            margin-right: 30px;
        }

        .form-submit {
            text-align: right;
            margin-bottom: 20px;
        }

        .info-time {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .parent {
            position: relative;
            display: inline-block;
        }

        .close {
            position: absolute;
            top: 0;
            right: 0;
        }

        .select2-selection__rendered {
            line-height: 38px !important;
        }

        .select2-container .select2-selection--single {
            height: 38px !important;
        }

        .select2-selection__arrow {
            height: 36px !important;
        }
    </style>
}
<!-- Main Container -->
<div class="container">

    <input type="hidden" value="@ViewBag.Id" id="ECompanyListingId" />
    <div class="row box-wrapper">
        <div class="col-12">
            <div class="pd-form-title">
                <h5 class="form-title-head">Edit Company Listing </h5>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="list-nav-wrapper">
                <ul class="nav nav-pills flex-column lst-add-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link nav-lstdetail active" id="home-tab" data-toggle="tab"
                           href="#CompanyDetails" role="tab" aria-controls="home" aria-selected="true">
                            Company
                            Details
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-lstdetail" id="profile-tab" data-toggle="tab" href="#Keywords"
                           role="tab" aria-controls="profile" aria-selected="false">Keywords</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-lstdetail" id="contact-tab" data-toggle="tab"
                           href="#LocationInformation" role="tab" aria-controls="contact"
                           aria-selected="false">Location Information</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-lstdetail" id="contact-tab" data-toggle="tab"
                           href="#OtherInformation" role="tab" aria-controls="contact" aria-selected="false">
                            Other
                            Information
                        </a>
                    </li>
                    <li class="nav-item" id="btnGallery">
                        <a class="nav-link nav-lstdetail" id="contact-tab" data-toggle="tab" href="#Gallery"
                           role="tab" aria-controls="contact" aria-selected="false">Gallery</a>
                    </li>
                </ul>
            </div>


        </div>

        <!-- /.col-md-4 -->
        <div class="col-md-9">
            <form id="EditCompanyListings_Submit_Form" name="EditCompanyListings_Submit_Form">
                <div class="body-content collapse-icon accordion-icon-rotate" id="ListingData">
                    <div class="tab-content" id="myTabContent">
                        <!-- CompanyDetails -->
                        @await Html.PartialAsync("~/Views/ClientListing/_EditClientCompanyDetail.cshtml")

                        <!-- Keywords -->
                        @await Html.PartialAsync("~/Views/ClientListing/_EditClientKeywords.cshtml")

                        <!-- Location Information -->
                        @await Html.PartialAsync("~/Views/ClientListing/_EditClientLocationInformation.cshtml")

                        <!--Other Information  -->
                        @await Html.PartialAsync("~/Views/ClientListing/_EditClientOtherInformation.cshtml")

                        <!-- Gallery -->
                        @await Html.PartialAsync("~/Views/ClientListing/_EditClientGallery.cshtml")
                    </div>
                </div>
                <div class="form-submit-btns form-actions">
                    <button type="submit" class="btn btn-primary-lst" value="Save" name="Button" style="visibility:hidden" id="btnSave">Save</button>
                    <button type="reset" class="btn btn-danger-lst" value="@ViewBag.Value" name="Button"
                            id="btnClose">
                        Back
                    </button>

                </div>
            </form>

        </div>
        <!-- /.col-md-8 -->
    </div>
</div>
<div class="marginDiv"></div>
<!--End Main Container  -->
@section scripts{
    <script src="~/PakDial-assets/assets/Cecustomerlistingscripts.min.js" asp-append-version="true"></script>
}

