<div class="tab-pane fade" id="LocationInformation" role="tabpanel" aria-labelledby="contact-tab">
    <div class="card-body">
        <h6>Location Information </h6>
        <div class="form-body">
            <div class="control-group row">
                <div class="col-md-6">
                    <input type="hidden" id="UAddressId" />
                    <div class="form-col position-relative">
                        <select id="UCLstState" name="UCLstState" class="form-control"
                                data-toggle="tooltip" data-trigger="hover" data-placement="top"
                                data-original-title="" title=""></select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-col position-relative">
                        <select id="UCLstCity" name="UCLstCity" class="form-control"
                                style="width:100%" data-toggle="tooltip" data-trigger="hover"
                                data-placement="top" data-original-title="" title=""></select>
                    </div>
                </div>

            </div>

            <div class="control-group row">

                <div class="col-md-6">
                    <div class="form-col position-relative">
                        <select id="UCLstCityArea" name="UCLstCityArea" class="form-control"
                                style="width:100%" data-toggle="tooltip" data-trigger="hover"
                                data-placement="top" data-original-title="" title=""></select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-col position-relative">

                        <input id="UCLstBuildingAddress" name="UCLstBuildingAddress" type="text"
                               placeholder="Building Address" class="form-control">
                    </div>
                </div>

            </div>

            <div class="control-group row">

                <div class="col-md-6">
                    <div class="form-col position-relative">
                        <input id="UCLstStreetAddress" name="UCLstStreetAddress" type="text"
                               placeholder="Street Address" class="form-control">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-col position-relative">
                        <input id="UCLstLandMark" name="UCLstLandMark" type="text"
                               placeholder="Land Mark" class="form-control">
                    </div>
                </div>

            </div>

            <div class="control-group row">

                <div class="col-md-6">
                    <div class="form-col position-relative">

                        <input id="UCLstLatitude" name="UCLstLatitude" type="text"
                               placeholder="Latitude" class="form-control">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-col position-relative">

                        <input id="UCLstLongitude" name="UCLstLongitude" type="text"
                               placeholder="Longitude" class="form-control">
                    </div>
                </div>

            </div>

            <div class="form-col">
                <textarea id="UCLstAddress" rows="5" class="form-control" name="UCLstAddress"
                          placeholder="Address"></textarea>
            </div>

        </div>
    </div>
</div>