
@{
    ViewData["Title"] = "AddClientCompanyListing";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

@section Style {
    <style>
        .inner-card {
            background-color: #f4f5fa;
        }

        .child-card {
            margin-left: 30px;
            margin-right: 30px;
        }

        .form-submit {
            text-align: right;
            margin-bottom: 20px;
        }

        .info-time {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .parent {
            position: relative;
            display: inline-block;
        }

        .close {
            position: absolute;
            top: 0;
            right: 0;
        }
        .select2-selection__rendered {
            line-height: 38px !important;
        }

        .select2-container .select2-selection--single {
            height: 38px !important;
        }

        .select2-selection__arrow {
            height: 36px !important;
        }
    </style>
}
<!-- Main Container -->
<div class="container">

    <div class="row box-wrapper">
        <div class="col-12">
            <div class="pd-form-title">
                <h2 class="form-title-head">Add Company Listing </h2>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="list-nav-wrapper">
                <ul class="nav nav-pills flex-column lst-add-tabs" id="myTab" role="tablist">
                    <li class="nav-item" id="btnGallery">
                        <a class="nav-link nav-lstdetail active" id="home-tab" data-toggle="tab"
                           href="#CompanyDetails" role="tab" aria-controls="home" aria-selected="true">
                            Company
                            Details
                        </a>
                    </li>
                    <li class="nav-item" id="btnGallery">
                        <a class="nav-link nav-lstdetail" id="profile-tab" data-toggle="tab" href="#Keywords"
                           role="tab" aria-controls="profile" aria-selected="false">Keywords</a>
                    </li>
                    <li class="nav-item" id="btnGallery">
                        <a class="nav-link nav-lstdetail" id="contact-tab" data-toggle="tab"
                           href="#LocationInformation" role="tab" aria-controls="contact"
                           aria-selected="false">Location Information</a>
                    </li>
                    <li class="nav-item" id="btnGallery">
                        <a class="nav-link nav-lstdetail" id="contact-tab" data-toggle="tab"
                           href="#OtherInformation" role="tab" aria-controls="contact" aria-selected="false">
                            Other
                            Information
                        </a>
                    </li>
                    <li class="nav-item" id="btnGallery">
                        <a class="nav-link nav-lstdetail" id="contact-tab" data-toggle="tab" href="#Gallery"
                           role="tab" aria-controls="contact" aria-selected="false">Gallery</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- /.col-md-4 -->
        <div class="col-md-9">
            <form id="AddCompanyListings_Submit_Form" name="AddCompanyListings_Submit_Form">
                <div class="body-content collapse-icon accordion-icon-rotate" id="ListingData">
                    <div class="tab-content" id="myTabContent">
                        <!-- CompanyDetails -->
                        @await Html.PartialAsync("~/Views/ClientListing/_ClientCompanyDetail.cshtml")

                        <!-- Keywords -->
                        @await Html.PartialAsync("~/Views/ClientListing/_ClientKeywords.cshtml")

                        <!-- Location Information -->
                        @await Html.PartialAsync("~/Views/ClientListing/_ClientLocationInformation.cshtml")

                        <!--Other Information  -->
                        @await Html.PartialAsync("~/Views/ClientListing/_ClientOtherInformation.cshtml")

                        <!-- Gallery -->

                        @await Html.PartialAsync("~/Views/ClientListing/_ClientGallery.cshtml")
                    </div>
                </div>

                <div class="form-submit-btns form-actions" style="visibility:hidden" id="btnsubmit">
                    <button type="submit" class="btn btn-primary-lst" value="Save" name="Button" id="btnSave">Save</button>
                    <button type="reset" class="btn btn-danger-lst mr-1" value="Close" name="Button" id="btnClose">Close</button>
                </div>
            </form>



        </div>
        <!-- /.col-md-8 -->
    </div>
</div>
<div class="marginDiv"></div>
<!--End Main Container  -->
@section scripts{
    <script src="~/PakDial-assets/assets/Cacustomerlistingscripts.min.js" asp-append-version="true"></script>
}