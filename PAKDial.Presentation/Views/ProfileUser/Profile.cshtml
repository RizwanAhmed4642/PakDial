@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";

}
<!-- Main Content -->
<div class="container">
    <div class="box-wrapper pl-5 pr-5">
        @await Component.InvokeAsync("BasicCustomerInfo", ViewBag.CustomerId)
        <div class="row mt-5">
            <div class="col-lg-6 col-md-6 user-lftbox">

                <div class="box">
                    <div class="profile-info">
                        <h3 class="txt-head-lst">YOUR LISTINGS</h3>

                        <div class="blog-btn user-button" id="Divsubmit">
                            <button type="submit" class="btn btn-primary-lst" value="Save" name="Button" id="ViewAll">View All</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 user-rghtbox">

                <div class="box">
                    <div class="profile-info">
                        <h3 class="txt-head-lst">LISTING'S SUMMARY</h3>

                        @await Component.InvokeAsync("CustomerListingsSummary", ViewBag.CustomerId)


                    </div>
                </div>
            </div>
        </div>
        <div class="marginDiv"></div>
    </div>

</div>
<div class="marginDiv"></div>
<!-- End Main Content -->

@section scripts{
    <script src="~/PakDial-assets/assets/Userprofilescripts.min.js" asp-append-version="true"></script>
}