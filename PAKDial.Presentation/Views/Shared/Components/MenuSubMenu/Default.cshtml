@using PAKDial.Presentation.Helpers;
@model IEnumerable<PAKDial.Domains.ViewModels.VUserLoginRUMenu>
@{
    var Selectedmodules = Model.OrderBy(c => c.ModuleId).Select(c => new { c.ModuleId, c.ModuleName,c.ClassName }).Distinct();
}

