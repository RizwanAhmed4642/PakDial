                    <li class='@Html.IsActive(controlsroute.Controller, controlsroute.Action)'>
                        <a class="menu-item" asp-area="" asp-controller=@controlsroute.Controller asp-action=@controlsroute.Action>@controlsroute.MenuName</a>
                    </li>
                }
            </ul>

        </li>
    }
