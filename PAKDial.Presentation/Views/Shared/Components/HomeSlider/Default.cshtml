@model IEnumerable<PAKDial.Domains.UserEndViewModel.VMOutSourceAdvertisment>
@{
    var counter = 1;
    var carouselcounter = 0;
}

<div id="carousel-example-1z" class="carousel slide carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators">
        @if (Model.Count() > 0)
        {
            foreach (var slider in Model)
            {
                if (carouselcounter == 0)
                {
                    <li data-target="#carousel-example-1z" data-slide-to="@carouselcounter" class="active"></li>
                }
                else
                {
                    <li data-target="#carousel-example-1z" data-slide-to="@carouselcounter"></li>
                }
                carouselcounter++;
            }
        }
        else
        {
            <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
        }
    </ol>
    <div class="carousel-inner" role="listbox">
        @if (Model.Count() > 0)
        {
            foreach (var slider in Model)
            {
                if (counter == 1)
                {
                    <div class="home-slider-item carousel-item active">
                        <img class="d-block w-100" src="@slider.ImagePath" alt="@slider.Name" asp-append-version="true">
                    </div>
                }
                else
                {
                    <div class="home-slider-item carousel-item">
                        <img class="d-block w-100" src="@slider.ImagePath" alt="@slider.Name" asp-append-version="true">
                    </div>
                }
                counter++;
            }
        }
        else
        {
            <div class="home-slider-item carousel-item active">
                <img class="d-block w-100" src="~/PakDial-assets/images/banner.jpg" alt="First slide" asp-append-version="true">
            </div>
        }

    </div>
</div>
