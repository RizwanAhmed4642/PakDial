@model PAKDial.Domains.DomainModels.Customers
 @{ 
     var DOB = "No DOB";
     if (Model.DateOfBirth != null)
     {
         DateTime date = (DateTime)Model.DateOfBirth;
         if (date != null)
         {
             DOB = date.ToString("MM/dd/yyyy");
         }
     }
 }
<div class="row">
    <div class="col-lg-3 col-md-3 mt-5">
        <div class="user-profile-img">
            @if (Model.ImagePath != null && Model.ImagePath != "")
            {
                <img src="@Model.ImagePath" class="img-fluid" asp-append-version="true" />
            }
            else
            {
                <img src="~/PakDial-assets/images/user-d.png" class="img-fluid" asp-append-version="true">

            }
            <button type="submit" class="btn btn-primary-lst" onclick="window.location.href = '/ClientListing/EditCustomer' " value="@Model.Id" name="Button" id="btnEditProfile">Edit<i class="fa fa-edit"></i></button>

        </div>


    </div>
    <div class="col-lg-9 col-md-9 mt-5">
        <h4 class="txt-head-lst">@Model.FirstName @Model.LastName</h4>

        <div class="row">
            <div class="col-md-3">
                <label class="user-info pd-primary-font">Date of Birth</label>
            </div>
            <div class="col-md-9">
                <p class="user-detail">@DOB</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label class="user-info pd-primary-font">Phone</label>
            </div>
            <div class="col-md-9">
                <p class="user-detail">@Model.PhoneNumber </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label class="user-info pd-primary-font">CNIC</label>
            </div>
            <div class="col-md-9">
                <p class="user-detail">@Model.Cnic</p>
            </div>
        </div>
        @*<div class="row">
            <div class="col-md-3">
                <label class="user-info pd-primary-font">Email</label>
            </div>
            <div class="col-md-9">
                <p class="user-detail"></p>
            </div>
        </div>*@

    </div>
</div>