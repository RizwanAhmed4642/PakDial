<div class="modal fade text-left show" id="AddEmployee" tabindex="-1" role="dialog" aria-labelledby="myModalLabel34" aria-modal="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel34">Create Employee</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form id="AddEmployee_Submit_Form">
                <div class="form-body">
                    <div class="card">
                        <div class="card-content collapse show">
                            <div class="card-body">
                                <div class="form-body">
                                    <fieldset class="scheduler-border">
                                        <legend class="scheduler-border"><h4 class="card-title">Profile Image</h4></legend>
                                        <div class="control-group row">
                                            <div class="col-12 d-flex justify-content-center">
                                                <div class="w-25">
                                                    <img class="border border-primary w-100" id="AtargetImg">
                                                    <label class="btn btn-primary w-100 mt-1" for="Aimagefiles">Thumbnail</label>
                                                    <input type="file" accept="image/*" class="upload" style="display:none" id="Aimagefiles">
                                                </div>
                                            </div>
                                        </div>

                                    </fieldset>
                                    <fieldset class="scheduler-border">
                                        <legend class="scheduler-border"><h4 class="card-title">Personal Information</h4></legend>
                                        <div class="control-group row">
                                            <div class="col-md-6">
                                                <div class="form-group position-relative">
                                                    <label>First Name<span class="text-danger">*</span></label>
                                                    <input id="AEmpFirstName" name="AEmpFirstName" type="text" placeholder="First Name" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group position-relative">
                                                    <label>Last Name<span class="text-danger">*</span></label>
                                                    <input id="AEmpLastName" name="AEmpLastName" type="text" placeholder="Last Name" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="control-group row">
                                            <div class="col-md-6">
                                                <div class="form-group position-relative">
                                                    <label>Date Of Birth<span class="text-danger">*</span></label>
                                                    <input id="AEmpDob" name="AEmpDob" type="date" placeholder="DOB" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="form-group position-relative">
                                                        <label>CNIC<span class="text-danger">*</span></label>
                                                        <input id="AEmpCnic" name="AEmpCnic" type="text" placeholder="CNIC" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="control-group row">
                                            <div class="col-md-6">
                                                <div class="form-group position-relative">
                                                    <label>Passport</label>
                                                    <input id="AEmpPassport" name="AEmpPassport" type="text" placeholder="Passport" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset class="scheduler-border">
                                        <legend class="scheduler-border"><h4 class="card-title">Contact Information</h4></legend>
                                        <div class="control-group row">

                                            <div class="col-md-6">
                                                <div class="form-group position-relative">
                                                    <label>Contact Number<span class="text-danger">*</span></label>
                                                    <input id="AEmpContactNumber" name="AEmpContactNumber" type="text" placeholder="Contact Number" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="position-relative ">
                                                        <label>Phone Number</label>
                                                        <input type="text" id="AEmpPhoneNumber" name="AEmpPhoneNumber" class="form-control" placeholder="Phone Number">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset class="scheduler-border">
                                        <legend class="scheduler-border"><h4 class="card-title">Residential Information</h4></legend>
                                        <div class="control-group row">
                                            <div class="col-md-6">
                                                <div class="form-group position-relative">
                                                    <label>Country<span class="text-danger">*</span></label>
                                                    <select id="AEmpCountry" name="AEmpCountry" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"></select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group position-relative">
                                                    <label>Status<span class="text-danger">*</span></label>
                                                    <select id="AEmpStatus" name="AEmpStatus" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"></select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="control-group row">
                                            <div class="col-md-6">
                                                <div class="form-group position-relative">
                                                    <label>City<span class="text-danger">*</span></label>
                                                    <select id="AEmpCity" name="AEmpCity" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"></select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group position-relative">
                                                    <label>City Area<span class="text-danger">*</span></label>
                                                    <select id="AEmpCityArea" name="AEmpCityArea" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"></select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="control-group row">
                                            <div class="col-md-12">
                                                <label>Address<span class="text-danger">*</span></label>
                                                <textarea id="AEmpAddress" rows="5" class="form-control" name="AEmpAddress" placeholder="About Address"></textarea>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset class="scheduler-border">
                                        <legend class="scheduler-border"><h4 class="card-title">Credentials Information</h4></legend>
                                        <div class="control-group row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="position-relative ">
                                                        <label>Role<span class="text-danger">*</span></label>
                                                        <select id="AEmpRole" name="AEmpRole" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"></select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="position-relative ">
                                                        <label>Designation<span class="text-danger">*</span></label>
                                                        <select id="AEmpDesignation" name="AEmpDesignation" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"></select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="control-group row">
                                            <div class="col-md-6">
                                                <div class="form-group position-relative">
                                                    <label>Email<span class="text-danger">*</span></label>
                                                    <input id="AEmpEmail" name="AEmpEmail" type="text" placeholder="Email" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="position-relative ">
                                                        <label>Password<span class="text-danger">*</span></label>
                                                        <input type="password" id="AEmpPassword" name="AEmpPassword" class="form-control" placeholder="Password">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </fieldset>
                                </div>
                                <div id="AddEmpShowButtons" class="modal-footer employeemodalfooter">
                                    <button type="reset" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                                <div id="AddEmpShowLoader" class="modal-footer employeemodalfooter" style="display:none">
                                    <button class="btn btn-primary" type="button" disabled="">
                                        <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                                        Results Saving...
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
               
            </form>
        </div>
    </div>
</div>
