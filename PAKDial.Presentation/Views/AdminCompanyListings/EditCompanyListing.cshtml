@model PAKDial.Domains.ViewModels.VMAddCompanyListingModel
@{
    ViewData["Title"] = "EditCompanyListing";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section Style {
    <style>
        .inner-card {
            background-color: #f4f5fa;
        }

        .child-card {
            margin-left: 30px;
            margin-right: 30px;
        }

        .form-submit {
            text-align: right;
            margin-bottom: 20px;
        }

        .info-time {
            margin-top: 10px;
            margin-bottom: 10px;
        }
        .parent {
            position: relative;
            display: inline-block;
        }

        .close {
            position: absolute;
            top: 0;
            right: 0;
        }
        #pageloader {
            background: rgba( 255, 255, 255, 0.8 );
            /*display: none;*/
            height: 100%;
            position: fixed;
            width: 100%;
            z-index: 9999;
        }
            #pageloader img {
                left: 50%;
                margin-left: -32px;
                margin-top: -32px;
                position: fixed;
                top: 50%;
            }
    </style>
}
@Html.AntiForgeryToken()
    <div class="content-wrapper">
        <div id="pageloader">
            <img src="~/app-assets/images/icons/loading.gif" />
        </div>
        <input type="hidden" value="@Model.Id" id="ECompanyListingId" />
        <div class="content-wrapper-before"></div>
        <div class="content-header row">
            <div class="content-header-left col-md-4 col-12 mb-2">
                <h3 class="content-header-title">Manage Listings</h3>
            </div>
            <div class="content-header-right col-md-8 col-12">
                <div class="breadcrumbs-top float-md-right">
                    <div class="breadcrumb-wrapper mr-1">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#">Manage Listings</a>
                            </li>
                            <li class="breadcrumb-item active">
                                <b>Edit Company Listing</b>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="body-content">
            <section id="MainSection">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Edit Company Listing</h4>
                                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        @*<li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>*@
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                        <li><a data-action="close" id="EditbtnCrossForm"><i class="ft-x"></i></a></li>
                                    </ul>
                                </div>
                            </div>

                            <div class="card-content collapse show">
                                <div class="child-card">
                                    <form id="EditCompanyListings_Submit_Form" name="EditCompanyListings_Submit_Form">
                                        <div class="body-content collapse-icon accordion-icon-rotate" id="EditListingData">
                                            @await Html.PartialAsync("~/Views/AdminCompanyListings/_EditCompanyDetail.cshtml")
                                            @await Html.PartialAsync("~/Views/AdminCompanyListings/_EditKeywords.cshtml")
                                            @await Html.PartialAsync("~/Views/AdminCompanyListings/_EditLocationInformation.cshtml")
                                            @await Html.PartialAsync("~/Views/AdminCompanyListings/_EditOtherInformation.cshtml")
                                            @await Html.PartialAsync("~/Views/AdminCompanyListings/_EditCreateYourGallery.cshtml")
                                        </div>
                                        <div class="form-actions form-submit">
                                            <button type="submit" class="btn btn-primary" value="UpdateNew" name="Button" id="btnUpdateNew" style="display:none">UpdateNew</button>

                                            <button type="submit" class="btn btn-primary" value="UpdateClose" name="Button" id="btnUpdateClose">Update</button>

                                            <button type="reset" class="btn btn-danger mr-1" value="Close" name="Button" id="btnClose">Close</button>

                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

@section scripts {
    <script src="~/app-assets/vendors/js/forms/validation/jquery.validate.min.js"></script>
    <script src="~/assets/js/CommonFunctions.js"></script>
    <script src="~/assets/js/AdminCompanyListigscomponent/AdminCompanyListingsModal.js"></script>
    <script src="~/assets/js/AdminCompanyListigscomponent/AdminCompanyListingsEditViewModal.js"></script>
}