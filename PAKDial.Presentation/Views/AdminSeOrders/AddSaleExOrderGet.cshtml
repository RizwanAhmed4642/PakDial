@{
    ViewData["Title"] = "AddSaleExOrderGet";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.AntiForgeryToken()
<div class="content-wrapper">
    <div class="content-wrapper-before"></div>
    <div class="content-header row">
        <div class="content-header-left col-md-4 col-12 mb-2">
            <h3 class="content-header-title">Manage Orders</h3>
        </div>
        <div class="content-header-right col-md-8 col-12">
            <div class="breadcrumbs-top float-md-right">
                <div class="breadcrumb-wrapper mr-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">Manage Orders</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <b>Create Order</b>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="body-content">
        <section>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Create Order</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    <li><a data-action="close"><i class="ft-x"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            <div class="child-card">
                                <form id="AddSeOrder_Submit_Form" name="AddSeOrder_Submit_Form">
                                    <div class="form-body">
                                        <div class="card">
                                            <div class="card-content collapse show">
                                                <div class="card-body">
                                                    <div class="form-body">
                                                        <fieldset>
                                                            <div class="control-group row">
                                                                <div class="col-md-6">
                                                                    <div class="form-group position-relative">
                                                                        <label>Areas:</label>
                                                                        <select id="ASeOrderCombineAreasId" name="ASeOrderCombineAreasId" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"></select>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group position-relative">
                                                                        <label>Company:</label>
                                                                        <select id="ASeOrderCompanyNameId" name="ASeOrderCompanyNameId" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"></select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="control-group row">
                                                                <div class="col-md-6">
                                                                    <div class="form-group position-relative">
                                                                        <label>Package</label>
                                                                        <select id="ASeOrderPackageId" name="ASeOrderPackageId" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"></select>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group position-relative">
                                                                        <label>PaymentMode</label>
                                                                        <select id="ASeOrderPaymentId" name="ASeOrderPaymentId" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"></select>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            

                                                            <div class="control-group row" id="ASeOrderBankChequeOnlineId" style="display:none">
                                                                <div class="col-md-6">
                                                                    <div class="form-group position-relative">
                                                                        <label>Bank Name</label>
                                                                        <input id="ASeOrderBankName" name="ASeOrderBankName" type="text" placeholder="Bank Name" class="form-control">
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6" id="ASeOrderSubBankChequeId" style="display:none">
                                                                    <div class="form-group position-relative">
                                                                        <label>Cheque No</label>
                                                                        <input id="ASeOrderChqueNo" name="ASeOrderChqueNo" type="text" placeholder="Cheque No" class="form-control">
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6" id="ASeOrderSubBankOnlineId" style="display:none">
                                                                    <div class="form-group position-relative">
                                                                        <label>Account No</label>
                                                                        <input id="ASeOrderAccNo" name="ASeOrderAccNo" type="text" placeholder="Account No" class="form-control">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="control-group row">
                                                                <div class="col-md-6">
                                                                    <div class="form-group position-relative">
                                                                        <label>Discount</label>
                                                                    </div>
                                                                    <div class="form-group position-relative" id="DiscountElements">
                                                                        <div class="form-check form-check-inline">
                                                                            <input class="form-check-input" type="radio" name="inlineDiscountOption" id="inlineDiscountRs" value="rs" checked >
                                                                            <label class="form-check-label" for="inlineRadio1">RS</label>
                                                                        </div>
                                                                        <div class="form-check form-check-inline">
                                                                            <input class="form-check-input" type="radio" name="inlineDiscountOption" id="inlineDiscountPer" value="per" >
                                                                            <label class="form-check-label" for="inlineRadio2">%</label>
                                                                        </div>

                                                                        <input id="ASeOrderDiscout" name="ASeOrderDiscout" class="form-control" data-toggle="tooltip" data-trigger="hover" data-placement="top"  />


                                                                    </div>
                                                                </div>

                                                                <div class="col-md-6">
                                                                    <div class="form-group position-relative pt-lg-3 pt-md-3">
                                                                        <div class="form-check">
                                                                            <input class="form-check-input" type="checkbox" value="" id="ASeOrderIsDiscount">
                                                                            <label class="form-check-label" for="ASeOrderlblIsDiscount">
                                                                                IsDiscount
                                                                            </label>
                                                                        </div>
                                                                    </div>
                                                                 </div>
                                                            </div>
                                                        </fieldset>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div id="AddSeOrderShowButtons" class="modal-footer">
                                            <button type="reset" class="btn btn-info" onclick="location.href='/AdminSeOrders/Index'">Back to List</button>
                                            <button type="reset" class="btn btn-danger" onclick="AddSeOrdersReset()">Reset</button>
                                            <button type="submit" class="btn btn-primary">Save</button>
                                        </div>
                                        <div id="AddSeOrderShowLoader" class="modal-footer" style="display:none">
                                            <button class="btn btn-primary" type="button" disabled="">
                                                <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                                                Saving Results...
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@section scripts {
    <script src="~/app-assets/vendors/js/forms/validation/jquery.validate.min.js"></script>
    <script src="~/assets/js/CommonFunctions.js"></script>
    <script src="~/assets/js/AdminSeOrdersComponent/AdminSeOrdersModel.js"></script>
    <script src="~/assets/js/AdminSeOrdersComponent/AdminSeOrderAddViewModel.js"></script>
}
